<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title>DailyTrends</title>
        <link href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet" type="text/css">
    </head>

    <body>
        <!--Navigation bar-->
        <nav class="navbar navbar-dark bg-dark">
            <a href="/" class="navbar-brand">DailyTrends</a>
        </nav>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-7">
                    
                    <% if(data){ %>
                        <% for (var i = 0; i < data.length; i++){ %>
                            <article>
                                <table class="table table-bordered mt-5">
                                    <thead>
                                        <tr>
                                            <th colspan="4"><h1> Noticia <%= [i + 1] %> </h1></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td colspan="4"><h2> <%= data[i].title %> </h2></td>
                                        </tr>
                                        <tr>
                                            <td colspan="4"><%= data[i].newdescription %></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"><h5> <%= data[i].source %> </h5></td>
                                            <td>
                                                <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Borrar</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </article>
                        <%} %>
                    <% } %>

                    
                </div>
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="/add" method="post">
                                <div class="form-group">
                                    <h5>Título</h5>
                                    <input type="text" name="title" placeholder="Título" class="form-control">
                                </div>
                                <div class="form-group">
                                    <h5>Descripción</h5>
                                    <input type="text" name="newdescription" placeholder="Descripción" class="form-control">
                                </div>
                                <div class="form-group">
                                    <h5>Fuente</h5>
                                    <input type="text" name="source" placeholder="Fuente" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    Guardar noticia
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
           
        </div> 

    </body>

</html>