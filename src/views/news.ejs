<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title>DailyTrends</title>
        <link href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet" type="text/css">
    </head>

    <body>
        <!--Navigation bar-->
        <nav class="navbar navbar-dark bg-dark">
            <a href="/" class="navbar-brand">DailyTrends</a>
        </nav>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-7">
                    <article>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Datos</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data){ %>
                                    <% for (var i = 0; i < data.length; i++){ %>
                                        <tr>
                                            <td><h1> <%= data[i].title %> </h1></td>
                                        </tr>
                                        <tr>
                                            <td><%= data[i].newdescription %></td>
                                        </tr>
                                        <tr>
                                            <td><%= data[i].source %></td>
                                        </tr>
                                    <% } %>
                                <% } %>
                            </tbody>
                        </table>
                    </article>
                    
                </div>
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <form action="/add" method="post">
                                <div class="form-group">
                                    <h5>Título</h5>
                                    <input type="text" name="title" placeholder="Título" class="form-control">
                                </div>
                                <div class="form-group">
                                    <h5>Descripción</h5>
                                    <input type="text" name="newdescription" placeholder="Descripción" class="form-control">
                                </div>
                                <div class="form-group">
                                    <h5>Fuente</h5>
                                    <input type="text" name="source" placeholder="Fuente" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    Guardar noticia
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
           
        </div> 


    </body>

</html>